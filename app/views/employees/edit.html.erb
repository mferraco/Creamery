<%= simple_nested_form_for @employee, :html => { :class => 'form-horizontal' } do |employee_form| %>
	<div class="container-fluid">
	<div class="row-fluid">
		<div class="span2">&nbsp;</div>
		<div class="span4">
			<fieldset>
				<legend>Edit Employee</legend>
				<div class = "well">
					<!-- render employee fields -->
					<%= render "employee_fields", :f => employee_form %>
					<%= employee_form.submit nil, :class => 'btn btn-primary' %>
				</div>
		  </fieldset>
		</div>
		<div class="span4">
			<% if @employee.active == false %>
				<legend>Activate Employee to Create Account</legend>
			<% else %>
			<legend>Create an account for this employee?</legend>
			<div class="well">
				<!-- nested user form -->
				<%= employee_form.simple_fields_for :user do |user_form| %>
					<!-- render user fields -->
					<%= render "user_fields", :f => user_form %>
				<% end %>
				<p>
					<!-- button to show the user fields -->
					<%= employee_form.link_to_add(raw("<i class='icon-plus icon-white'></i> Want to create an account?"), :user, :class => 'btn btn-mini btn-primary') %>
				</p>
			</div>
			<% end %>
		</div>
		<div class="span2">&nbsp;</div>
	</div>
	</div>
<% end %>
